#queTitle {
  position: relative;
  margin: 20px;
  padding: 5px;
  min-height: 50px;
  background: #fff;
  border-radius: 5px;
}

#queTitle p {
  display: block;
}

#queTitle p:last-child {
  position: absolute;
  bottom: 0;
  right: 0;
  text-align: right;
  color: #999;
  font-size: 14px;
}

#queRadio label {
  display: flex;
  margin: 10px 20px;
  padding: 5px 20px;
  justify-content: space-between;
  flex-wrap: nowrap;
  border: 1px solid #ccc;
  border-radius: 5px;
  background: #fff;
}

#queRadio label>radio {
  width: 20%;
  margin: auto;
  text-align: right;
}

#queRadio label>view {
  width: 80%;
}

@-webkit-keyframes fadeOutLeft {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }
}

@keyframes fadeOutLeft {
  from {
    opacity: 1;
  }

  to {
    opacity: 0;
    -webkit-transform: translate3d(-100%, 0, 0);
    transform: translate3d(-100%, 0, 0);
  }
}

.fadeOutLeft {
  -webkit-animation-name: fadeOutLeft;
  animation-name: fadeOutLeft;
}

@-webkit-keyframes fadeInRight {
  from {
    opacity: 0;
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

@keyframes fadeInRight {
  from {
    opacity: 0;
    -webkit-transform: translate3d(100%, 0, 0);
    transform: translate3d(100%, 0, 0);
  }

  to {
    opacity: 1;
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }
}

.fadeInRight {
  -webkit-animation-name: fadeInRight;
  animation-name: fadeInRight;
}

.qnum {
  margin-top: 15px;
}
